@using Core.Application.ViewModels.Product;
@model List<ProductViewModel>
@{
    ViewData["Title"] = "Mis productos";
}

<script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>



<div class="container-fluid mycontainer">
    <div class="col-12">
        <div class="HorizonNavBar">
            <div class="dropdown">
                <a href="#" class="d-flex align-items-center text-white text-decoration-none dropdown-toggle" id="dropdownUser1" data-bs-toggle="dropdown" aria-expanded="false">
                    <img src="https://github.com/mdo.png" alt="" width="32" height="32" class="rounded-circle me-2">
                    <strong>John Doe</strong>
                </a>
                <ul class="dropdown-menu dropdown-menu-dark text-small shadow" aria-labelledby="dropdownUser1" style="">
                    <li><a class="dropdown-item" href="#">Settings</a></li>
                    <li><a class="dropdown-item" href="#">Profile</a></li>
                    <li><hr class="dropdown-divider"></li>
                    <li><a class="dropdown-item" asp-action="LogOut" asp-controller="User">Cerrar Session</a></li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container">
        <div align="right" class="col-4 offset-8 search-div">
            <form method="post" asp-action="ProductResult" asp-controller="Admin">
                <div class="input-group mygroup">
                    <input type="text" placeholder="Buscar..." class="form-control" id="searchProduct" name="searchProduct" />
                    <div class="input-group-append">
                        <button type="submit" class="btn btn-dark my-serch-button">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
                                <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z" />
                            </svg>
                        </button>
                    </div>
                </div>
            </form>
        </div>
        <div class="row">
            @if (Model.Count > 0)
            {
                @foreach (var item in Model)
                {
                    <div class="col-4 ml-1">
                        <div class="card defaultproduct-cards">
                            <div class="card-body">
                                <div class="myproduct-icon-container">
                                    <span>
                                        <a asp-action="EditProduct" asp-controller="Admin" asp-route-id="@item.Id">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="20" id="update-icon" height="20" style="color: mediumpurple" fill="currentColor" class="bi bi-pencil-fill" viewBox="0 0 16 16">
                                                <path d="M12.854.146a.5.5 0 0 0-.707 0L10.5 1.793 14.207 5.5l1.647-1.646a.5.5 0 0 0 0-.708l-3-3zm.646 6.061L9.793 2.5 3.293 9H3.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.207l6.5-6.5zm-7.468 7.468A.5.5 0 0 1 6 13.5V13h-.5a.5.5 0 0 1-.5-.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.5-.5V10h-.5a.499.499 0 0 1-.175-.032l-.179.178a.5.5 0 0 0-.11.168l-2 5a.5.5 0 0 0 .65.65l5-2a.5.5 0 0 0 .168-.11l.178-.178z" />
                                            </svg>
                                        </a>
                                        <button class="btn" type="button" data-toggle="modal" data-target="#deletedialog">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="20" id="delete-icon" height="20" style="color: red" fill="currentColor" class="bi bi-trash3-fill" viewBox="0 0 16 16">
                                                <path d="M11 1.5v1h3.5a.5.5 0 0 1 0 1h-.538l-.853 10.66A2 2 0 0 1 11.115 16h-6.23a2 2 0 0 1-1.994-1.84L2.038 3.5H1.5a.5.5 0 0 1 0-1H5v-1A1.5 1.5 0 0 1 6.5 0h3A1.5 1.5 0 0 1 11 1.5Zm-5 0v1h4v-1a.5.5 0 0 0-.5-.5h-3a.5.5 0 0 0-.5.5ZM4.5 5.029l.5 8.5a.5.5 0 1 0 .998-.06l-.5-8.5a.5.5 0 1 0-.998.06Zm6.53-.528a.5.5 0 0 0-.528.47l-.5 8.5a.5.5 0 0 0 .998.058l.5-8.5a.5.5 0 0 0-.47-.528ZM8 4.5a.5.5 0 0 0-.5.5v8.5a.5.5 0 0 0 1 0V5a.5.5 0 0 0-.5-.5Z" />
                                            </svg>
                                        </button>
                                    </span>
                                </div>
                                <img src="@item.Img" class="card-img-top" alt="product">
                                <h5 class="card-title">@item.Name  - @item.BarCode</h5>
                                <p class="card-text">
                                    @item.Description
                                    <span class="code-bar-span"><b>Categoría:</b> @item.Category</span>
                                    <span class="code-bar-span"><b>Precio:</b> @item.SalePrice</span>
                                    <span class="code-bar-span"><b>Cantidad:</b> @item.Amount</span>
                                </p>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="text-center text-white notFoundDiv">
                    Producto no encontrado.
                </div>
            }
        </div>
    </div>
</div>



@foreach (var item in Model)
{
    <div class="modal fade" id="deletedialog" tabindex="-1" role="dialog" aria-labelledby="addNewProductTitle" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="addNewProductTitle">Agregando Producto</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <h4 class="modal-text">¿Estás seguro que deseas remover  <b>@item.Name</b> de tus produtos?</h4>
                </div>
                <div class="modal-footer confirmationDialog">
                    <button type="button" class="btn btn-dark" data-dismiss="modal">No</button>
                    <a asp-action="DeleteProduct" asp-controller="Admin" asp-route-id="@item.Id" class="btn btn-dark">Si</a>
                </div>

            </div>
        </div>
    </div>

}


